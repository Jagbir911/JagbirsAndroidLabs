<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Guys!"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/myedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hinttext"
        android:text="@string/editmessage" />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/button_message" />

    <CheckBox
        android:id="@+id/mycheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you drink coffee?" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dou you drink coffee?" />


    <RadioButton
        android:id="@+id/myRadiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you drink cofee?" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:src="@drawable/algonquincollege" />

    <ImageButton
        android:id="@+id/myimagebutton"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:src="@drawable/algonquincollege" />
</LinearLayout>

